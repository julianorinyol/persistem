
<div class='container col-md-5'>

<table class='table'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
  <h4>Public Notes</h4>
    <tr><td>Title</td><td>Content</td><td></td><td></td><td> </td></tr>
    <% @notes.each do |note| %>
      <tr data-link="<%= edit_note_path(note) %>">
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<table class = 'table'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
         <h4>Your Notes</h4>
     <tr><td>Title</td><td>Content</td><td> </td><td> </td><td> </td></tr>
    <% if @my_notes %>
    <% @my_notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
 


<br>
</div>